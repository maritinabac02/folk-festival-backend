							"const j = pm.response.json();\r",
							"pm.environment.set(\"tokenOrganizer\", j.token);\r",
							"\r",
							"try {\r",
							"  const payload = JSON.parse(atob(j.token.split('.')[1]));\r",
							"  console.log(\"JWT subject:\", payload.sub || payload.username);\r",
							"  pm.environment.set(\"whoami\", payload.sub || payload.username || \"\");\r",
